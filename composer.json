{
    "name": "gin0115/buddypress-events",
    "type": "library",
    "description": "BuddyPress Events Plugin",
    "keywords": [],
    "homepage": "https://github.com/gin0115/buddy_press_events",
    "license": "MIT",
    "authors": [{
        "name": "Glynn Quelch",
        "email": "glynn.quelch@gmail.com",
        "homepage": "https://github.com/gin0115"
    }],
    "autoload": {
        "psr-4": {
            "Gin0115\\BuddyPress_Events\\": "../../src"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "Gin0115\\BuddyPress_Events\\": "../tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0 || ^8.0",
        "phpstan/phpstan": "^1.0",
        "szepeviktor/phpstan-wordpress": "^1.0",
        "php-stubs/wordpress-stubs": "^6.0 || ^5.9",
        "roots/wordpress": "^6.1",
        "wp-phpunit/wp-phpunit": "^6.1",
        "dealerdirect/phpcodesniffer-composer-installer": "*",
        "wp-coding-standards/wpcs": "*",
        "yoast/phpunit-polyfills": "^0.2.0 || ^1.0.0",
        "symfony/var-dumper": "*",
        "gin0115/wpunit-helpers": "*",
        "jetbrains/phpstorm-stubs": "dev-master",
        "humbug/php-scoper": "*",
        "bamarni/composer-bin-plugin": "^1.4",
        "php-stubs/woocommerce-stubs": "^6.7",
        "kimhf/advanced-custom-fields-pro-stubs": "^5.9",
        "pxlrbt/php-scoper-prefix-remover": "*",
        "vlucas/phpdotenv": "^5.4"
    },
    "require": {
        "php": ">=7.4.0",
        "pinkcrab/perique-framework-core": "^1",
        "pinkcrab/registerables": "*",
        "pinkcrab/perique-plugin-lifecycle": "^0.2.0",
        "pinkcrab/ajax": "^1",
        "pinkcrab/wp-psr16-cache": "^2",
        "pinkcrab/bladeone-provider": "^1",
        "pinkcrab/perique-admin-menu": "^0.2",
        "pinkcrab/wp-rest-schema": "0.0.1-beta3",
        "pinkcrab/perique-route": "^0.1",
        "pinkcrab/function-constructors": "^0.2.0",
        "pinkcrab/enqueue": "^1.3",
        "pinkcrab/perique-migration": "^0.1.0",
        "gin0115/pixie-wpdb": "^0.0.3"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --coverage-clover clover.xml --testdox --colors=always",
        "coverage": "./vendor/bin/phpunit --coverage-html coverage-report --testdox --colors=always",
        "analyse": "./vendor/bin/phpstan analyse src -l8",
        "sniff": "./vendor/bin/phpcs src/ -v",
        "all": "composer test && composer analyse && composer sniff",
        "build": "bash build.sh",
        "build-dev": "bash build.sh --dev",
        "build-dump": "composer dump-autoload --working-dir build/php --classmap-authoritative"
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "prepend-autoloader": true,
        "autoloader-suffix": "gin0115_bp_events_1",
        "allow-plugins": {
            "roots/wordpress-core-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "bamarni/composer-bin-plugin": true
        }
    }
}
